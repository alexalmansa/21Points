<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientmain"
    xmlns:mstb="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/text_week"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="This week"
            android:textColor="@color/white"
            android:textSize="24dip" />

        <TextView
            android:id="@+id/text_points"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="8"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="98dip" />

        <TextView
            android:id="@+id/text_daysLeft"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="X days left"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_marginStart="80dp"
                android:text="Weight Units: " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="Weekly Points Goal: " />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_setPrefereces"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_main_pointsGoal"
                android:layout_width="92dp"
                android:layout_height="52dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tv_main_weightUnitsGoal"
                android:layout_width="85dp"
                android:layout_height="52dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <org.honorato.multistatetogglebutton.MultiStateToggleButton
                android:id="@+id/mstb_multi_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dip"
                android:visibility="visible"
                app:layout_anchorGravity="bottom|center_horizontal|end"
                mstb:mstbPrimaryColor="@color/verd"
                mstb:mstbSecondaryColor="@color/accent"
                mstb:values="@array/parts_array" />
        </LinearLayout>

        <!---TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/text_preferences"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-light"
            android:gravity="start"
            android:text="Current Objectives: "
            android:textColor="@color/white"
            android:textSize="16sp" /-->

    </LinearLayout>
    <![CDATA[

    android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"/>

        ]]>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chart1"
        android:layout_marginBottom="-32dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="Last 5 weeks"
        android:textColor="@color/verd"
        android:textSize="16dip" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="323dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/baseline_add_white_18dp"
        app:layout_anchorGravity="bottom|right|end"
        tools:layout_editor_absoluteX="309dp"
        tools:layout_editor_absoluteY="436dp" />


</RelativeLayout>
