<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/dailogAdd"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Add Point"
        android:textSize="25sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkbox_exercice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Did you exercise?" />

    <CheckBox
        android:id="@+id/checkbox_eat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Did you eat well?" />

    <CheckBox
        android:id="@+id/checkbox_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Did you drink responsibly?" />

    <EditText
        android:id="@+id/etnotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Notes"
        android:inputType="textEmailAddress" />


    <Button
        android:id="@+id/btnAdd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Add"
        android:background="@drawable/shapelogin"
        android:textColor="@android:color/white" />
</LinearLayout>